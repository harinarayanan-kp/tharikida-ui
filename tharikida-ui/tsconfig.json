{
  "compilerOptions": {
    "jsx": "react",
    "outDir": "./dist",
    "target": "es2016", 
    "module": "commonjs",
    "esModuleInterop": true,
    "strict": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
